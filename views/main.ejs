<nav class="navbar navbar-expand-sm bg-light navbar-light">
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><h4>drama dot com</h4></li>
        </ul>
    </div>
    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class='navbar-nav ml-auto'>
            <li class="nav-item">
                <p><%= name %>님 로그인중</p>
            </li>
            <li class="nav-item">
                <button id="logout_bt" class="btn btn-outline-dark">logout</button>
            </li>
        </ul>
    </div>
</nav>

<hr>
<table id="content_table">
    <thead>
        <tr>
            <th >제목</th>
        </tr>
    </thead>
    
        <% for(let i=0; i<allresult.length; i++){ %>
        <tbody>
            <tr>
                <td ><span id="<%= allresult[i]._id %>" onclick="dramaview(this.id)" >
                    <%= allresult[i].title %></span>
                </td>
                
            </tr>
        </tbody>
        <% } %>
    
</table>

<script>
    function dramaview(_id){    
        $.post('/write/detail_view',{_id}, function(returnData){
           $('#main').html(returnData);
        });
    }
    $(document).ready(function(){
        $('#logout_bt').click(function(){
            $.post('user/logout',{},function(returnData){
                alert(returnData.message);
                location.reload();
            });
        });
    });
</script>